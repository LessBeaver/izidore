{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
	<head>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link rel="stylesheet" href="/build/app.css">
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			<script src="/build/runtime.js" defer></script>
			<script src="/build/app.js" defer></script>
		{% endblock %}
	</head>
	{% block body %}
		<header class="nav-header">
			<div class="nav-header-container">
				<div class="nav-header-top">
					<a href="" class="header-logo">
						<div class="header-logo-container">
							<img class="header-logo-img cursor" src="https://izidore.com/img/logos/izidore.gif" alt="Logo Izidore">
						</div>
					</a>
					<div class="header-searchbar">
						<form action="" class="header-form-searchbar">
							<div class="header-form-searchbar-div">
								<input type="text" class="header-form-searchbar-input">
							</div>
							<div class="header-logo-searchbar"></div>
						</form>
					</div>
					<div class="header-links">
						<nav class="header-links-container">
							<ul>
								<li>
									<a href="https://izidore.com/vide-appart-creation" class="btn btn-square green-btn cursor">Vendre</a>
								</li>
								<li>
									<div class="wishlist indicator cursor"></div>
								</li>
								<li>
									<div class="cart indicator cursor"></div>
								</li>
								<li>
									<a href="#">
										<img src="https://izidore.com/img/icons/user.svg" alt="" class="indicator cursor">
									</a>
								</li>
							</ul>
						</nav>
					</div>
				</div>
				<div class="nav-header-down">
					<div class="nav-header-down-links">
						<nav class="header-links-container">
							<div class="nav-items-container">
								<div class="nav-items-new">
									<a href="https://izidore.com/catalogue?type=new">NOUVEAUTÉS</a>
								</div>
								<div class="nav-items">
									<span>VIDE-APPARTS</span>
								</div>
								<div class="nav-items">
									<span>MEUBLES</span>
								</div>
								<div class="nav-items">
									<span>ÉLECTROMÉNAGER</span>
								</div>
								<div class="nav-items">
									<span>DÉCORATION</span>
								</div>
								<div class="nav-items">
									<span>MARQUES</span>
								</div>
							</div>
							<div class="nav-items-container">
								<div class="nav-items">
									<span>COMMENT ÇA MARCHE ?</span>
								</div>
								<div class="nav-items">
									<span>CONSEILS</span>
								</div>
								<div class="nav-items">
									<span>BLOG</span>
								</div>
							</div>
						</div>
					</nav>
				</div>
			</div>
		</header>
	{% endblock body %}
</html>
